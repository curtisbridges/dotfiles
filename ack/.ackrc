# Always use color
--color

# Ignore stuff
--ignore-dir=.idea/
--ignore-dir=node_modules/
--ignore-dir=tmp

# Make sure ack knows how to search common filetypes used in node.js projects
--type-set=coffee=.coffee
--type-set=jade=.jade
--type-set=feature=.feature
--type-set=json=.json
--type-set=javascript=.js
--type-set=md=.md,.mkd,.markdown
--type-set=typescript=.ts
--type=javascript
--type=typescript

